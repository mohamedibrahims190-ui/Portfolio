@{
    ViewData["Title"] = "Home Page";
}

<div>
    <div class="sticky-nav">
        <div class="d-flex flex-wrap justify-content-center gap-3">
            <a class="hero-btn nav-btn" href="#home">Home</a>
            <a class="hero-btn nav-btn" href="#about">About</a>
            <a class="hero-btn nav-btn" href="#projects">Projects</a>
            <a class="hero-btn nav-btn" href="#skills">Skills</a>
            <a class="hero-btn nav-btn" href="#education">Education</a>
            <a class="hero-btn nav-btn" href="#contact">Contact</a>
        </div>
    </div>
    <section id="home">
    <div class="container">
        <div class="resume-section text-center mb-5" style="margin-top: 8rem;">
            <div class="d-flex justify-content-center align-items-center mb-4">
                <span class="dot me-2"></span>
                <span class="available-text hello-text fw-bolder">Available For Work</span>
            </div>

            <a href="files/Mohamed-Ibrahim-Resume.pdf"
               class="btn-resume-icon hero-btn"
               download>
                <i class="bi bi-download"></i>
                Resume
            </a>

        </div>

        <div class="row justify-content-center text-center mt-5">
            <div class="col-lg-10">
                <h1 class="d-xxl-inline-flex fw-bold mb-3 custom-heading hero-title">
                    <span class="hello-text">Hello, I’m</span>
                    <span id="name" class="hello-text"></span>
                </h1>

                <h5 class="text-primary fw-semibold mb-4 hero-title" style="min-height: 58px;">
                    <span id="title" class="hello-text"></span>
                </h5>
            </div>
        </div>


        <div class="container-fluid text-center py-5">
            <div class="d-flex justify-content-center align-items-center gap-3">

                <!-- Connect Button -->
                <span id="connectBtn" class="hero-btn nav-btn">
                    Let's Connect
                </span>

                <!-- Email Box with Copy Icon Inside -->
                <div class="position-relative d-inline-block">

                    <span id="emailText"
                          class="hero-btn"
                          style="padding-left: 1.25rem; padding-right: 3.2rem; pointer-events: none;">
                        mohamedibrahims190@gmail.com
                    </span>

                    <i id="copyIcon"
                       class="bi bi-copy position-absolute top-50 translate-middle-y text-primary"
                       style="right: 16px; cursor: pointer;"
                       onclick="copyEmail()"></i>

                </div>

            </div>


            <!-- Overlay for blur effect -->
            <div id="overlay" style="
                 display: none;
                 position: fixed;
                 top: 0;
                 left: 0;
                 width: 100%;
                 height: 100%;
                 backdrop-filter: blur(5px);
                 background-color: rgba(0,0,0,0.3);
                 z-index: 50;
                 transition: opacity 0.3s ease;">
            </div>

            <!-- Connect Card -->
            <div id="connectCard" class="card text-light mx-auto p-4 rounded-4 shadow-lg"
                 style="max-width: 400px; display: none; background-color: transparent; border: 1px solid white; z-index: 100; position: fixed; top: 50%; left: 50%; transform: translate(-50%, -50%); transition: all 0.3s ease;">

                <!-- Close Button -->
                <button id="closeCard" class="btn-close btn-close-white float-end" aria-label="Close"></button>

                <!-- Social Links -->
                <div class="d-flex justify-content-center gap-3 mb-3 mt-2">
                    <a href="https://www.linkedin.com/in/mohameibrahims/" class="text-light fs-5"><i class="bi bi-linkedin"></i></a>
                    <a href="https://www.instagram.com/mohamedibu_/" class="text-light fs-5"><i class="bi bi-instagram"></i></a>
                    <a href="https://github.com/mohamedibrahims190-ui" class="text-light fs-5"><i class="bi bi-github"></i></a>
                </div>

                <!-- Action Buttons -->
                <a href="mailto:mohamedibrahims190@gmail.com" class="btn btn-outline-light w-100 mb-2">
                    <i class="bi bi-envelope"></i> mohamedibrahims190@gmail.com
                </a>
                <a href="tel:+971589383054" class="btn btn-outline-light w-100 mb-3">
                    <i class="bi bi-telephone"></i> Call Now
                </a>

                <!-- Contact Form -->
                <p>Or Send A Message</p>
                <form>
                    <label class="visually-hidden" for="emailInput">Your Email</label>
                    <input type="email" id="emailInput" class="form-control mb-2" placeholder="Your Email" required>

                    <label class="visually-hidden" for="messageInput">Your Message</label>
                    <textarea id="messageInput" class="form-control mb-3" rows="3" placeholder="Your Message" required></textarea>

                    <button type="submit" class="btn btn-light w-100">Send Message</button>
                </form>
            </div>
        </div>
    </div>
    </section>
        <section id="about">
            <div class="text-primary fw-semibold hero-title text-center" style="font-size: 5rem;">About Me</div>
        </section>
    
        <section id="projects">
            <!-- Projects content -->
        </section>
    
        <section id="skills">
            <!-- Skills content -->
        </section>
    
        <section id="education">
            <!-- Education content -->
        </section>
    
        <section id="contact">
            <!-- Contact content -->
        </section>
</div>


